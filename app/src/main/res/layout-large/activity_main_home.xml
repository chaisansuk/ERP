<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imgView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="182dp"
        android:background="@drawable/splashas"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtUsername"
        android:layout_width="552dp"
        android:layout_height="58dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/hint_pin"
        android:padding="10dp"
        android:singleLine="true"
        android:text="admin"
        android:textAlignment="center"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="560dp"
        tools:layout_conversion_absoluteX="20dp"
        tools:layout_conversion_absoluteY="190dp">

        <requestFocus
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="190dp" />
    </EditText>

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="552dp"
        android:layout_height="58dp"
        android:layout_marginRight="24dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="@string/hint_pin2"
        android:padding="10dp"
        android:password="true"
        android:singleLine="true"
        android:text="12345678"
        android:textAlignment="center"
        android:textColor="@color/input_login"
        android:textColorHint="@color/input_login_hint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.548"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="560dp"
        tools:layout_conversion_absoluteX="20dp"
        tools:layout_conversion_absoluteY="246dp">

        <requestFocus
            tools:layout_conversion_absoluteHeight="0dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_conversion_absoluteX="20dp"
            tools:layout_conversion_absoluteY="246dp" />
    </EditText>

    <!-- Login Button -->

    <!-- Link to Login Screen -->


    <Button
        android:id="@+id/btnLogin"
        style="@android:style/Widget.Button.Inset"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="272dp"
        android:background="@drawable/circlebutton"
        android:onClick="checkLogin"
        android:text="@string/btn_login"
        android:textColor="@color/btn_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
