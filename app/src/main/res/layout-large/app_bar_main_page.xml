<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.kudos_it_manitch.erp_kudos.main_page.MainPageActivity"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="64dp"
        android:background="@color/zxing_custom_possible_result_points"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>
    <!--<pl.droidsonroids.gif.GifImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="1024dp"-->
    <!--android:src="@drawable/anigif2"-->
    <!--app:layout_constraintBottom_toBottomOf="parent"-->
    <!--app:layout_constraintHorizontal_bias="0.0"-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--app:layout_constraintRight_toRightOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:layout_constraintVertical_bias="0.495" />-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="370dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="สวัสดี"
        android:textColor="@color/white"
        android:textSize="60dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <RelativeLayout
        android:layout_width="490dp"
        android:layout_height="84dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="608dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/approvebtn"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="288dp"
                android:layout_height="83dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="KUDOS APPROVE"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="24sp"
                app:srcCompat="@drawable/engineer1" />

        </RelativeLayout>
        <TextView
            android:id="@+id/text_count_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_count"
            android:text="50"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"

            android:textColor="@color/white"
            android:layout_alignRight="@+id/relative"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/nameUser"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imageUser" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageUser"
        android:layout_width="310dp"
        android:layout_height="288dp"
        android:src="@mipmap/ic_launcher_round"
        app:srcCompat="@android:drawable/sym_def_app_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="229dp" />

    <Button
        android:id="@+id/logout"
        style="@android:style/Widget.DeviceDefault.Button.Inset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:onClick="logout"
        android:text="Logout"
        android:textColor="@color/QRCodeBlackColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.937" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fablist_plus"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        app:fab_addButtonColorNormal="#e62828"
        app:fab_addButtonColorPressed="#ed7575"

        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fablist_approve"

            app:fab_colorNormal="#3ad13a"
            app:fab_colorPressed="#8ef278"
            app:fab_size="mini"
            app:fab_title="Add Shop"
            />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fablist_ic"

            app:fab_colorNormal="#2aa3f4"
            app:fab_colorPressed="#95d2f5"
            app:fab_size="mini"
            app:fab_title="All Map"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <RelativeLayout
        android:layout_width="490dp"
        android:layout_height="84dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        android:id="@+id/relativeLayout3"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/logout"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/inventorybtn"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="288dp"
                android:layout_height="84dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="INVENTORY"
                android:textColor="@color/QRCodeBlackColor"
                android:textSize="24sp"
                app:srcCompat="@drawable/owner1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_count_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/relative1"
            android:background="@drawable/item_count"
            android:text="50"
            android:textAlignment="center"
            android:textColor="@color/white" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
