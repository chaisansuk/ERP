    <TextView
        android:id="@+id/textView4"
        android:layout_width="290dp"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="สวัสดี"
        android:textColor="@color/white"
        android:textSize="60dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="564dp"
        android:layout_height="85dp"
        android:layout_marginTop="601dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/approvebtn"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="APPROVE"
                android:textColor="@color/QRCodeBlackColor"
                app:srcCompat="@drawable/engineer1" />

        </RelativeLayout>

        <TextView
            android:id="@+id/text_count_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/relative"
            android:layout_centerHorizontal="true"
            android:background="@drawable/item_count"
            android:text="50"

            android:textAlignment="center"
            android:textColor="@color/white" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="564dp"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/inventorybtn"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="INVENTORY"
                android:textColor="@color/QRCodeBlackColor"
                app:srcCompat="@drawable/owner1" />
        </RelativeLayout>

        <!--<TextView-->
