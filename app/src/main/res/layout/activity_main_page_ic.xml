<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.kudos_it_manitch.erp_kudos.main_page.MainPageICActivity"
    >

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/bgsc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayouto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:alpha="0.3"
        android:background="@color/zxing_custom_possible_result_points"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></RelativeLayout>
    <RelativeLayout
        android:layout_width="283dp"
        android:layout_height="61dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/relativeLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="179dp"
        app:layout_constraintHorizontal_bias="0.506">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">
            <Button
                android:id="@+id/receivebtn"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="288dp"
                android:layout_height="83dp"
                android:text="RECEIVE"
                android:textColor="@color/QRCodeBlackColor"
                app:srcCompat="@drawable/engineer1"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
        <TextView
            android:id="@+id/text_count_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_count"
            android:text="0"
            android:textAlignment="center"

            android:textColor="@color/white"
            android:layout_alignRight="@+id/relative"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="285dp"
        android:layout_height="64dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.506">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/issuebtn"
                style="@android:style/Widget.DeviceDefault.Button.Inset"
                android:layout_width="288dp"
                android:layout_height="84dp"
                android:text="ISSUE"
                android:textColor="@color/QRCodeBlackColor"
                app:srcCompat="@drawable/owner1" />
        </RelativeLayout>
        <TextView
        android:id="@+id/text_count_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_count"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignRight="@+id/relative1"
        />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
