<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linTopShow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/txprno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="txprno"
                    android:textSize="@dimen/h1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txprdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txprdate"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/txapprove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txapprove"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/txreqname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txreqname"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/txdeliplace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txdeliplace"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/txremark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txremark"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/txcostcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="txapprove"
                    android:textSize="@dimen/h1" />

                <TextView
                    android:id="@+id/txcostname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txreqname"
                    android:textSize="@dimen/h2" />

                <TextView
                    android:id="@+id/txqty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="txdeliplace"
                    android:textSize="@dimen/h2" />

                <Button
                    android:id="@+id/btn_update"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/circlebutton"
                    android:textColor="#990011"
                    android:onClick="clickApprove"
                    android:layout_marginTop="20dp"
                    android:text="Approve" />

                <Button
                    android:id="@+id/button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circlebutton"
                    android:onClick="clickBackShowDetail"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_marginTop="30dp"
                    android:text="BACK"
                    android:textColor="#03A9F4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>